check_bin_unit = check/bin/unit
check_bin_unit_LDADD = \
  $(lib_libapp_la) \
  $(lib_libapp_tf_la) \
  $(lib_libapp_roff_la) \
  -lrigging-bench-module \
  $(end)
check_bin_unit_LDFLAGS = $(CHECK_LDFLAGS_SET)
$(check_bin_unit_OBJECTS): AM_CPPFLAGS+=$(AND_CHECK_CPPFLAGS_SET)
$(check_bin_unit_OBJECTS): AM_CXXFLAGS+=$(AND_CHECK_CXXFLAGS_SET)
check_bin_unit_MODULES = $(none)
check_bin_unit_SOURCES = \
  obj/src/tests/namespace.cpp \
  obj/src/tests/unit/c.main.cpp \
  obj/src/tests/unit/namespace.cpp \
  obj/src/tests/unit/Fixture.cpp \
  obj/src/tests/unit/app.Fixture.cpp \
  obj/src/tests/unit/roff.Fixture.cpp \
  obj/src/tests/unit/tf.Fixture.cpp \
  obj/src/tests/unit/directive.Fixture.cpp \
  $(obj_src_tests_unit_error_SUBSOURCES) \
  obj/src/tests/unit/exception.Fixture.cpp \
  $(obj_src_tests_unit_parser_SUBSOURCES) \
  $(obj_src_tests_unit_processor_SUBSOURCES) \
  $(obj_src_tests_unit_stream_SUBSOURCES) \
  obj/src/tests/unit/variable.Fixture.cpp \
  $(end)
#
include src/tests/unit/error/Makefrag.am
include src/tests/unit/parser/Makefrag.am
include src/tests/unit/processor/Makefrag.am
include src/tests/unit/stream/Makefrag.am
#
$(scold_cxxdir)/tests/unit/dependencies.mk: $(check_bin_unit_SOURCES)
$(check_bin_unit_SOURCES) : obj/src/%.cpp : src/%.xcpp
	$(TF_V_DIS) $(call TF_XCPP2CPP, $<)
	$(TF_V_DONE) test -e $@
$(scold_cxxdir)/tests/unit/dependencies.mk:
	$(TF_V_DEP) $(call TF_DEPENDENCIES, $^)
	$(TF_V_DONE) test -e $@
include $(scold_cxxdir)/tests/unit/dependencies.mk
clean-dependencies::
	rm -f $(scold_cxxdir)/tests/unit/dependencies.mk
