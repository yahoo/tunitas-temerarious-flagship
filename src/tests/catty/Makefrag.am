#
# Like /bin/cat, but we can't call it 'cat' because it will be in $PATH
#
check_bin_catty = check/bin/catty
check_bin_catty_LDADD = $(lib_libtunitas_flagship_temerarious_la)
check_bin_catty_LDFLAGS = $(CHECK_LDFLAGS_SET)
$(check_bin_catty_OBJECTS): AM_CPPFLAGS+=$(AND_CHECK_CPPFLAGS_SET)
$(check_bin_catty_OBJECTS): AM_CXXFLAGS+=$(AND_CHECK_CXXFLAGS_SET)
check_bin_catty_MODULES = $(none)
check_bin_catty_SOURCES = \
  obj/src/tests/catty/c.main.cpp \
  obj/src/tests/catty/namespace.cpp \
  obj/src/tests/catty/main.cpp \
  $(end)
#
$(scold_cxxdir)/tests/catty/dependencies.mk: $(check_bin_catty_SOURCES)
$(check_bin_catty_SOURCES) : obj/src/%.cpp : src/%.xcpp
	$(TF_V_DIS) $(call TF_XCPP2CPP, $<)
	$(TF_V_DONE) test -e $@
$(scold_cxxdir)/tests/catty/dependencies.mk:
	$(TF_V_DEP) $(call TF_DEPENDENCIES, $^)
	$(TF_V_DONE) test -e $@
include $(scold_cxxdir)/tests/catty/dependencies.mk
clean-dependencies::
	rm -f $(scold_cxxdir)/tests/catty/dependencies.mk
