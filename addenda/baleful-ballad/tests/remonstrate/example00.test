#!/bin/sh
source ${0%/*}/framework.sh || exit 1

rm -f tests/remonstrate/x99_example00/*.{f,h,i,t,c}pp
mkdir -p tests/remonstrate/x99_example00
cp tests/remonstrate/example00.xcpp tests/remonstrate/x99_example00/.

mkdir -p obj/modules obj/tests

# testing this
remonstrate --verbose --debug --make-directories --modulesdir=obj/modules --objdir=obj/src/tests --srcdir=tests tests/remonstrate/x99_example00/example00.xcpp

ls -ld \
    obj/modules{/fpp,/hpp,/ipp,}/remonstrate.x99_example00.example00 \
    obj/src/tests/remonstrate/x99_example00/example00.{cpp,mk} \
    tests/remonstrate/x99_example00/example00.xcpp
