#!/bin/sh
source ${0%/*}/framework.sh || exit 1

x99=x99_$b

rm -rf tests/remonstrate/$x99
mkdir -p tests/remonstrate/$x99
cp tests/remonstrate/$b.xcpp tests/remonstrate/$x99/.

# testing this
remonstrate --verbose --debug --make-directories --modulesdir=obj/modules --objdir=obj/src/tests --srcdir=tests tests/remonstrate/x99_example02/example02.xcpp

declare -a files=( \
    obj/modules{/fpp,/hpp,/ipp,}/remonstrate.x99_example02.example02 \
    obj/src/tests/remonstrate/x99_example02/example02.{cpp,mk} \
    tests/remonstrate/x99_example02/example02.xcpp \
)
ls -ld ${files[@]}

for file in ${files[@]}; do
    sed -e "s|^|${file##*/}> |" < $file
done
