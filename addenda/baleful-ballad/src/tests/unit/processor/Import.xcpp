#divert <fpp>
namespace tests {
  namespace unit {
    namespace processor {
      class Import;
    }
  }
}
#endiv
#divert <hpp>
#import tests.unit.processor.Dumper
#import tests.unit.processor.Contextualization
class tests::unit::processor::Import : public cppunit::test::Fixture, Dumper, Contextualization {
public:
  auto test_constructor() -> void;
  auto test_operator_call_good() -> void;
  auto test_operator_call_good_comment_bleeds() -> void;
  auto test_operator_call_fail() -> void;

  static auto suite() -> cppunit::Test *;
};
#endiv
#divert <cpp>
#import scold.Phase
#import scold.line.Item
#import scold.Stream
#import scold.Accruals
#import scold.processor.Import

auto tests::unit::processor::Import::test_constructor() -> void {
  scold::processor::Import im(cfg, ctx, build_search);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Import::test_operator_call_good() -> void {
  ::scold::processor::Import import(cfg, ctx, build_search);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "#import this.good.package // and some commentary");
  ::scold::Stream ou;
  ::scold::Accruals<::scold::IMPORT> im;
  ::scold::Accruals<::scold::ENTAIL> en;
  ::scold::Accruals<::scold::DEPEND> ds("file.o", "$(modulesdir)", "$(objdir)", "$(srcdir)", "$(DC-COMPILE)", ::scold::Regeneration::TWO_STEP);
  import(ph, li, ou, im, en, ds);
  dump(ph, li, ou, im, en, __FUNCTION__, __FILE__, __LINE__);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Import::test_operator_call_good_comment_bleeds() -> void {
  ::scold::processor::Import import(cfg, ctx, build_search);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "#import this.good.package// the comment bleeds into the module name");
  ::scold::Stream ou;
  ::scold::Accruals<::scold::IMPORT> im;
  ::scold::Accruals<::scold::ENTAIL> en;
  ::scold::Accruals<::scold::DEPEND> ds("file.o", "$(modulesdir)", "$(objdir)", "$(srcdir)", "$(DC-COMPILE)", ::scold::Regeneration::TWO_STEP);
  import(ph, li, ou, im, en, ds);
  dump(ph, li, ou, im, en, __FUNCTION__, __FILE__, __LINE__);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Import::test_operator_call_fail() -> void {
  ::scold::processor::Import import(cfg, ctx, build_search);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "FALI #import this.bad.package // and some commentary");
  ::scold::Stream ou;
  ::scold::Accruals<::scold::IMPORT> im;
  ::scold::Accruals<::scold::ENTAIL> en;
  ::scold::Accruals<::scold::DEPEND> ds("file.o", "$(modulesdir)", "$(objdir)", "$(srcdir)", "$(DC-COMPILE)", ::scold::Regeneration::TWO_STEP);
  import(ph, li, ou, im, en, ds);
  dump(ph, li, ou, im, en, __FUNCTION__, __FILE__, __LINE__);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Import::suite() -> cppunit::Test * {
  using namespace ::unit::rigging::suite;
  Stream s("Import");
  s << call("constructor", &Import::test_constructor)
    << call("operator()-good", &Import::test_operator_call_good)
    << call("operator()-good-comment", &Import::test_operator_call_good_comment_bleeds)
    << call("operator()-fail", &Import::test_operator_call_fail)
    ;
  return finalize(s);
}
#endiv
