#divert <fpp>
namespace tests {
  namespace unit {
    namespace processor {
      class Source;
    }
  }
}
#endiv
#divert <hpp>
#import tests.unit.processor.Dumper
#import tests.unit.processor.Contextualization
class tests::unit::processor::Source : public cppunit::test::Fixture, Dumper, Contextualization {
public:
  auto test_constructor() -> void;
  auto test_operator_call() -> void;

  static auto suite() -> cppunit::Test *;
};
#endiv
#divert <cpp>
#import scold.Phase
#import scold.line.Item
#import scold.Stream
#import scold.Accruals
#import scold.processor.Source

auto tests::unit::processor::Source::test_constructor() -> void {
  ::scold::processor::Source so(cfg, ctx);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Source::test_operator_call() -> void {
  ::scold::processor::Source source(cfg, ctx);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "int i;");
  ::scold::Stream ou;
  ::scold::Accruals<::scold::IMPORT> im;
  ::scold::Accruals<::scold::ENTAIL> en;
  ::scold::Accruals<::scold::DEPEND> ds("file.o", "$(modulesdir)", "$(objdir)", "$(srcdir)", "$(DC-COMPILE)", ::scold::Regeneration::TWO_STEP);
  source(ph, li, ou, im, en, ds);
  dump(ph, li, ou, im, en, __FUNCTION__, __FILE__, __LINE__);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Source::suite() -> cppunit::Test * {
  using namespace ::unit::rigging::suite;
  Stream s("Source");
  s << call("constructor", &Source::test_constructor)
    << call("operator()", &Source::test_operator_call)
    ;
  return finalize(s);
}
#endiv
