#divert <fpp>
namespace tests {
  namespace unit {
    namespace processor {
      class Entail;
    }
  }
}
#endiv
#divert <hpp>
#import tests.unit.processor.Dumper
#import tests.unit.processor.Contextualization
class tests::unit::processor::Entail : public cppunit::test::Fixture, Dumper, Contextualization {
public:
  auto test_constructor() -> void;
  auto test_operator_call_good_1() -> void;
  auto test_operator_call_good_2() -> void;
  auto test_operator_call_good_comment_bleeds() -> void;
  auto test_operator_call_fail() -> void;

  static auto suite() -> cppunit::Test *;
};
#endiv
#divert <cpp>
#import scold.Phase
#import scold.line.Item
#import scold.Stream
#import scold.Accruals
#import scold.processor.Entail

auto tests::unit::processor::Entail::test_constructor() -> void {
  ::scold::processor::Entail en(cfg, ctx, build_search);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Entail::test_operator_call_good_1() -> void {
  ::scold::processor::Entail entail(cfg, ctx, build_search);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "#entail this.good.package // and some commentary");
  ::scold::Stream ou;
  ::scold::Accruals<::scold::IMPORT> im;
  ::scold::Accruals<::scold::ENTAIL> en;
  auto const regeneration = ::scold::Regeneration::DEPRECATING_ONE_STEP;
  ::scold::Accruals<::scold::DEPEND> ds("file.o", "$(modulesdir)", "$(objdir)", "$(srcdir)", "$(DC-COMPILE)", regeneration);
  entail(ph, li, ou, im, en, ds);
  dump(ph, li, ou, im, en, __FUNCTION__, __FILE__, __LINE__);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Entail::test_operator_call_good_2() -> void {
  ::scold::processor::Entail entail(cfg, ctx, build_search);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "#entail this.good.package // and some commentary");
  ::scold::Stream ou;
  ::scold::Accruals<::scold::IMPORT> im;
  ::scold::Accruals<::scold::ENTAIL> en;
  auto const regeneration = ::scold::Regeneration::CURRENT_TWO_STEP;
  ::scold::Accruals<::scold::DEPEND> ds("file.o", "$(modulesdir)", "$(objdir)", "$(srcdir)", "$(DC-COMPILE)", regeneration);
  entail(ph, li, ou, im, en, ds);
  dump(ph, li, ou, im, en, __FUNCTION__, __FILE__, __LINE__);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Entail::test_operator_call_good_comment_bleeds() -> void {
  ::scold::processor::Entail entail(cfg, ctx, build_search);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "#entail this.good.package// the comment bleeds into the module name");
