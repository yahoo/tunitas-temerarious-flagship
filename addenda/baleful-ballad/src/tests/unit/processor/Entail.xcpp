}

auto tests::unit::processor::Entail::test_operator_call_fail() -> void {
  ::scold::processor::Entail entail(cfg, ctx, build_search);
  ::scold::Phase ph(::scold::Phase::FPP);
  ::scold::line::Item li(1, "# ENTAIL this.expect.fail.package // and some commentary");
  ::scold::Stream ou;
  ::scold::Accruals<::scold::IMPORT> im;
  ::scold::Accruals<::scold::ENTAIL> en;
  ::scold::Accruals<::scold::DEPEND> ds("file.o", "$(modulesdir)", "$(objdir)", "$(srcdir)", "$(DC-COMPILE)", ::scold::Regeneration::TWO_STEP);
  entail(ph, li, ou, im, en, ds);
  dump(ph, li, ou, im, en, __FUNCTION__, __FILE__, __LINE__);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::processor::Entail::suite() -> cppunit::Test * {
  using namespace ::unit::rigging::suite;
  Stream s("Entail");
  s << call("constructor", &Entail::test_constructor)
    << []() {
         Stream ope{"operator()"};
         ope << []() {
                  Stream sub{"operator()-good"};
                  sub << call("1", &Entail::test_operator_call_good_1)
                      << call("2", &Entail::test_operator_call_good_2)
                      << call("comment", &Entail::test_operator_call_good_comment_bleeds)
                    ;
                  return sub;
                }()
             << call("fail", &Entail::test_operator_call_fail)
           ;
         return ope;
       }()
    ;
  return finalize(s);
}
#endiv
