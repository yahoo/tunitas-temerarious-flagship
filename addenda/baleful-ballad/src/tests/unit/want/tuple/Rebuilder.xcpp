#divert <hpp>
class tests::unit::want::tuple::Rebuilder : public cppunit::test::Fixture {
public:
  auto test_case_true_zero() -> void;
  auto test_case_false_any() -> void;
  auto test_case_false_zero() -> void;

  static auto suite() -> cppunit::Test *;

  enum Rainfall { };
};
#endiv
#divert <cpp>
#import std.move
#import std.tuple
#import want.tuple.Rebuilder

auto tests::unit::want::tuple::Rebuilder::test_case_true_zero() -> void {
  ::want::tuple::Rebuilder<true, 4u, 0u, int, char, double, Rainfall> rebuilder;
  std::tuple<int, char, double, Rainfall> test(1, 'a', 2.3, Rainfall());
  auto r = rebuilder(std::move(test));
  std::tuple<char, double, Rainfall> const expected('a', 2.3, Rainfall());
  std::tuple<char, double, Rainfall> const actual = r;
  CPPUNIT_ASSERT(expected == actual);
}

auto tests::unit::want::tuple::Rebuilder::test_case_false_any() -> void {
  ::want::tuple::Rebuilder<false, 4u, 0u, int, char, double, Rainfall> rebuilder;
  std::tuple<int, char, double, Rainfall> test(1, 'a', 2.3, Rainfall());
  auto r = rebuilder(std::move(test));
  std::tuple<int, char, double, Rainfall> const expected(1, 'a', 2.3, Rainfall());
  std::tuple<int, char, double, Rainfall> const actual = r;
  CPPUNIT_ASSERT(expected == actual);
  CPPUNIT_ASSERT(true);
}

auto tests::unit::want::tuple::Rebuilder::test_case_false_zero() -> void {
  ::want::tuple::Rebuilder<false, 0u, 0u> rebuilder;
  std::tuple<> test;
  auto r = rebuilder(std::move(test));
  std::tuple<> const expected = std::tuple<>();
  std::tuple<> const actual = r;
  CPPUNIT_ASSERT(expected == actual);
}

auto tests::unit::want::tuple::Rebuilder::suite() -> cppunit::Test * {
  using namespace ::unit::rigging::suite;
  Stream s("Rebuilder");
  s << call("case_true_zero", &Rebuilder::test_case_true_zero)
    << call("case_false_any", &Rebuilder::test_case_false_any)
    << call("case_false_zero", &Rebuilder::test_case_false_zero)
    ;
  return finalize(s);
}
#endiv
