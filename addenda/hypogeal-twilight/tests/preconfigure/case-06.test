#!/bin/bash
source ${0%/*}/library/rigging.sh || exit 255
name=$(basename $0 .test)
explanation="with one unified m4 library and only --system-acdir"
if testify --system-acdir=abcd ; then
    echo "OK ($explanation)"
    e=0
else
    echo "FAIL ($explanation)"
    e=1
fi
find tests/preconfigure/o.${name}.d/m{4,9} | sort
sed -e 's/^/configure-----> /' <(tail -n 10 tests/preconfigure/o.${name}.d/configure)
exit ${e:-2}
