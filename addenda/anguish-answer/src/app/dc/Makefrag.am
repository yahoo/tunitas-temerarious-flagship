	$(HT_V_BOTH) $(call HT_DEPENDENCIES, $^)
	@test -e $@
include $(scold_cxxdir)/app/dc/dependencies.mk
clean-dependencies::
	rm -f $(scold_cxxdir)/app/dc/dependencies.mk
