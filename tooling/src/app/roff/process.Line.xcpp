#divert <fpp>
namespace app::roff::process {
  //
  // A line number in a file
  //
  // Specification:
  //
  //   Unsigned
  //   Printable
  //   Incrementable
  //   Equality
  //
  // Design:
  //
  //   This is harder than it looks.
  //   What do you mean "32 bits is enough" for any translation unit?
  //
  // Usage:
  //
  //   Oh come on.
  //
  namespace [[eponymous]] line {
    enum Line : int unsigned long;
  }
  using line::Line;
}
#endiv
#divert <hpp>
#import std.underlying_type
#import std.ostream
namespace app::roff::process::line {
  inline constexpr auto underlying(Line l) { return std::underlying_type_t<Line>(l); }
  inline auto operator<<(std::ostream &, Line) -> std::ostream &;
  inline auto operator++(Line &) -> Line &;
  inline auto operator++(Line &, int) -> Line;
}
#endiv
#divert <ipp>
namespace app::roff::process {
  auto line::operator<<(std::ostream &o, Line l) -> std::ostream & { return o << "line " << underlying(l) << ": "; }
  auto line::operator++(Line &lhs) -> Line & {
    return lhs = Line(1u+underlying(lhs));
  }
  auto line::operator++(Line &lhs, int) -> Line {
    auto old = lhs;
    ++lhs;
    return old;
  }
}
#endiv
